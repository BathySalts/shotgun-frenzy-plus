function void addItemOnList (int item, 
	str name, str desc,str actor, str priceactor, int maxitems, str btnicon){
	ItemList[item][0] = name;
	ItemList[item][1] = desc;
	ItemList[item][2] = actor;
	ItemList[item][3] = priceactor; 
	ItemList[item][4] = maxitems; 
	ItemList[item][5] = btnicon; 
	// ^ It's already synched with the inventory gaven on the terminal.
}

function str getItemName(int item){		return ItemList[item][0];}
function str getItemDesc(int item){		return ItemList[item][1];}
function str getItemActor(int item){	return ItemList[item][2];}
function int getItemPrice(int item){	return CheckInventory(ItemList[item][3]);}
function int getItemMax(int item){		return ItemList[item][4];}
function int getItemIcon(int item){		return ItemList[item][5];}