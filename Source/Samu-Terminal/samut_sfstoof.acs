function void SamuTerm_InitStrings(void){
	addWPString(
		WP_SHOTGUN,
		WP_SHOTGUN_TITLE,
		WP_SHOTGUN_DESC,
		WP_SHOTGUN_W1D,
		WP_SHOTGUN_W2D,
		WP_SHOTGUN_INFO
		);
	addWPString(WP_ASSAULT,
		WP_ASSAULT_TITLE,
		WP_ASSAULT_DESC,
		WP_ASSAULT_W1D,
		WP_ASSAULT_W2D,
		WP_ASSAULT_INFO);
		
	addWPString(WP_SUPPORT,
		WP_SUPPORT_TITLE,
		WP_SUPPORT_DESC,
		WP_SUPPORT_W1D,
		"",
		WP_SUPPORT_INFO);
		
	addWPString(WP_HEAVY,
		WP_HEAVY_TITLE,
		WP_HEAVY_DESC,
		WP_HEAVY_W1D,
		WP_HEAVY_W2D,
		WP_HEAVY_INFO);
		
	addWPString(WP_PLASMA,
		WP_PLASMA_TITLE,
		WP_PLASMA_DESC,
		WP_PLASMA_W1D,
		WP_PLASMA_W2D,
		WP_PLASMA_INFO);
		
	addWPString(WP_COMANDO,
		WP_COMANDO_TITLE,
		WP_COMANDO_DESC,
		WP_COMANDO_W1D,
		WP_COMANDO_W2D,
		WP_COMANDO_INFO);
		
	InitUpgWepList();
	Init_ItemList();
	MechUpList_init();
	CMDButList_Init();
}

function void addWPString(int ind,
	str title, str desc, str wp1desc, str wp2desc, str info){
	WpStrings[ind][0] = title;
	WpStrings[ind][1] = desc;
	WpStrings[ind][2] = wp1desc;
	WpStrings[ind][3] = wp2desc;
	WpStrings[ind][4] = info;
}

function str getWPTitle(int ind){
	return WpStrings[ind][0];
}

function str getWPDesc(int ind){
	return WpStrings[ind][1];
}

function str getWPW1Desc(int ind){
	return WpStrings[ind][2];
}

function str getWPW2Desc(int ind){
	return WpStrings[ind][3];
}

function str getWPInfo(int ind){
	return WpStrings[ind][4];
}

