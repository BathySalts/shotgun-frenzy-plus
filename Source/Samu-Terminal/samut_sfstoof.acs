function int getWPPrice(int which){
	int res = 0;
	switch(which){
		case WP_SHOTGUN: res = CheckInventory("shop_WP_SHOTGUN"); break;
		case WP_ASSAULT: res = CheckInventory("shop_WP_ASSAULT"); break;
		case WP_SUPPORT: res = CheckInventory("shop_WP_SUPPORT"); break;
		case WP_COMANDO: res = CheckInventory("shop_WP_COMANDO"); break;
		case WP_HEAVY: res = CheckInventory("shop_WP_HEAVY"); break;
		case WP_PLASMA: res = CheckInventory("shop_WP_PLASMA"); break;
		case WP_BFG: res = CheckInventory("shop_WP_BFG"); break;
		case WP_FLAMER: res = CheckInventory("shop_WP_FLAMER"); break;
	}
	return res;
}

