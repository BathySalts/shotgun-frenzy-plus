
function void UpdateListWPPage(int pageTag){
	setPageTitle(pageTag, "Buy Weapon Packs", CR_CYAN);
	
	if(isOnTheSamePage(pageTag)){
		Label_setShow(listwp_page[4], GetTechFlag_C(TECH_ARMSP1));
		setStrButtonShow(listwp_page[5], GetTechFlag_C(TECH_ARMSP1));
		setStrButtonShow(listwp_page[6], GetTechFlag_C(TECH_ARMSP1));
		setStrButtonShow(listwp_page[7], GetTechFlag_C(TECH_ARMSP1));
	
		Label_setShow(listwp_page[8], GetTechFlag_C(TECH_ARMSP2));
		setStrButtonShow(listwp_page[9], GetTechFlag_C(TECH_ARMSP2));
		setStrButtonShow(listwp_page[10], GetTechFlag_C(TECH_ARMSP2));
	}
}

function void InitListWPPage(int pageTag){
	int i, j, posx, posy, stepx, stepy, iposx, iposy;
	
	// Main set
	i = Label_Add(100.0,80.0); 
	Label_setText(i,"Standard set");
	Label_setFont(i,"STATBIGS");
	Label_setColor(i,CR_GREEN);
	Label_setTag(i, 1);
	Label_setShow(i, false);
	listwp_page[0] = i;
	
	posX = 40.0;
	posY = 100.0;
	stepX = 0.0;
	stepY = 45.0;
	
	for(j = 0; j < 3; j++){
	iposX = posX + stepX * j;
	iposY = posY + stepY * j;
		switch(j){
			case 0:
			i = StrButton_Add(iposX, iposY, "Shotgun");
			setStrButtonExeArgs(i, WP_SHOTGUN,0,0);
			break;
			case 1:
			i = StrButton_Add(iposX, iposY, "Assault");
			setStrButtonExeArgs(i, WP_ASSAULT,0,0);
			break;
			case 2:
